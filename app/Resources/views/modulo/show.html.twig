{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modulo</h1>

    <table>
        <tbody>
            <tr>
                <th>Titulo</th>
                <td>{{ modulo.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ modulo.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ modulo.precio }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ modulo.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_gestion_modulos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_gestion_modulos_edit', { 'id': modulo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
