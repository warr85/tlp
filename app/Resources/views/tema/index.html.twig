{% extends 'base_admin.html.twig' %}

{% block body %}
    <h1>Tema list</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tema in temas %}
            <tr>
                <td><a href="{{ path('admin_gestion_temas_show', { 'id': tema.id }) }}">{{ tema.nombre }}</a></td>
                <td>{{ tema.descripcion }}</td>
                <td>{{ tema.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_gestion_temas_show', { 'id': tema.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_gestion_temas_edit', { 'id': tema.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_gestion_temas_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
