{% extends 'base.html.twig' %}

{% block body %}
    <h1>Curso</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ curso.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ curso.descripcion }}</td>
            </tr>            
            <tr>
                <th>Id</th>
                <td>{{ curso.id }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ curso.imageName }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td><img src=" {{ vich_uploader_asset(curso, 'imageFile') }}" alt="{{ curso.imageName }}" /></td>
                <td>{{ curso.imageFile }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if curso.updatedAt %}{{ curso.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_gestion_cursos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_gestion_cursos_edit', { 'id': curso.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
