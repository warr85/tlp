{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscripcion</h1>

    <table>
        <tbody>
            <tr>
                <th>Fechainscripcion</th>
                <td>{% if inscripcion.FechaInscripcion %}{{ inscripcion.FechaInscripcion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ inscripcion.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('curso_comprar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('curso_comprar_edit', { 'id': inscripcion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
